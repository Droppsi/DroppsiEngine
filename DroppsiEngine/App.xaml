<Application x:Class="DroppsiEngine.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DroppsiEngine"
             xmlns:viewModels="clr-namespace:DroppsiEngine.MVVM.ViewModels"
             xmlns:views="clr-namespace:DroppsiEngine.MVVM.Views"
             StartupUri="MVVM/Views/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MenuButtons.xaml"/>
                <ResourceDictionary Source="Themes/ProjectPreview.xaml"/>
                <ResourceDictionary Source="Themes/SearchBox.xaml"/>
                <ResourceDictionary Source="Themes/SaveButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:NewProjectViewModel}">
                <views:NewProjectView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
